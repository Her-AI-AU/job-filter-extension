{
  "manifest_version": 3,
  "name": "Job Card Scanning",
  "version": "1.4",
  "description": "Display tags before opening job cards.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "permissions": ["activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["*://*.seek.com.au/*"],
      "js": ["content.js"],
      "css": ["contentStyle.css"]
    }
  ]
}
